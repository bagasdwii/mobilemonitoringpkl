<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/detailNasabah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/NamaNasabah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Nasabah"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/CabangNasabah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="14sp"
            android:textColor="#888888"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnSP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sp1"
            android:padding="4dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/btnSP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sp2"
            android:padding="4dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/btnSP3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sp3"
            android:padding="4dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/btnSP01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sp0"
            android:padding="4dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/btnSP02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sp0"
            android:padding="4dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/btnSP03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sp0"
            android:padding="4dp"
            android:visibility="gone"
            />


    </LinearLayout>
</LinearLayout>
