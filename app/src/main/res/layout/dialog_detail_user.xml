<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail User"
                android:textSize="20sp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/poppins_bold"/>


            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama User:"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
               />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama"
                android:paddingBottom="8dp"/>


            <TextView
                android:id="@+id/gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"

                android:text="Gmail:"/>
            <TextView
                android:id="@+id/tvgmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Gmail"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/Jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Jabatan:"/>
            <TextView
                android:id="@+id/tvjabatannn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Jabatan"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/Cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"

                android:text="Cabang:"/>
            <TextView
                android:id="@+id/tvCabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="cabang"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/KantorKas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Kantor Kas:"/>
            <TextView
                android:id="@+id/tvKantorKas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Kantor Kas"
                android:paddingBottom="8dp"/>
            <TextView
                android:id="@+id/Direksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Direksi:"/>
            <TextView
                android:id="@+id/tvDireksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Direksi"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/KepalaCabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Kepala Cabang:"/>
            <TextView
                android:id="@+id/tvKepalaCabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="KepalaCabang"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/Supervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Supervisor:"/>
            <TextView
                android:id="@+id/tvSupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Supervisor"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/AdminKas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Admin Kas:"/>
            <TextView
                android:id="@+id/tvAdminKas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="AdminKas"
                android:paddingBottom="8dp"/>
            <TextView
                android:id="@+id/Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Status:"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Status"
                android:paddingBottom="8dp"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>