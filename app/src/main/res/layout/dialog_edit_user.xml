<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit User"
                android:textSize="20sp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/poppins_bold"/>


            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama User:"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
               />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama"
                android:paddingBottom="8dp"/>


            <TextView
                android:id="@+id/gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"

                android:text="Gmail:"/>
            <TextView
                android:id="@+id/tvgmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Gmail"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/Jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Jabatan:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editJabatan"
                android:hint="Jabatan Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:id="@+id/Cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"

                android:text="Cabang:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editCabang"
                android:hint="Cabang Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:id="@+id/Wilayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Wilayah:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editWilayah"
                android:hint="Wilayah Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />
            <TextView
                android:id="@+id/Direksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Direksi:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editDireksi"
                android:hint="Direksi Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:id="@+id/KepalaCabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Kepala Cabang:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editKepalaCabang"
                android:hint="Kepala Cabang Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:id="@+id/Supervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Supervisor:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editSupervisor"
                android:hint="Supervisor Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:id="@+id/AdminKas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Admin Kas:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAdminKas"
                android:hint="Admin Kas Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />
            <TextView
                android:id="@+id/Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Status:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editStatus"
                android:hint="Status Yang Tersedia"
                android:padding="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_dropdown"
                android:background="@android:drawable/editbox_background"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>