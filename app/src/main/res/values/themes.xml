<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileMonitoringBankBPR" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.MobileMonitoringBankBPR" parent="Base.Theme.MobileMonitoringBankBPR" />
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/logobaru</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MobileMonitoringBankBPR</item>

    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item> <!-- Ganti dengan font Anda -->
        <item name="android:textColor">@color/color1</item>
    </style>
    <style name="PoppinsStyleMenu" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
</resources>